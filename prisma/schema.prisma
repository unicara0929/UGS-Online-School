// MGRレンジ査定ステータス
enum ManagerAssessmentStatus {
  PENDING // 査定待ち
  CONFIRMED // 確定
  DEMOTED // 降格処理済み
}

// MGRレンジマスタ
model ManagerRange {
  id                 String   @id @default(cuid())
  rangeNumber        Int      @unique // 1, 2, 3
  name               String // "レンジ1", "レンジ2", "レンジ3"
  minHalfYearlySales Int // 昇級条件売上（円）
  maintainSales      Int // 維持条件売上（円）
  isActive           Boolean  @default(true) // 有効フラグ
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  users               User[] // このレンジのMGR一覧
  previousAssessments ManagerAssessment[] @relation("PreviousRange")
  newAssessments      ManagerAssessment[] @relation("NewRange")

  @@index([rangeNumber])
  @@map("manager_ranges")
}

// MGR月次売上・被保険者数（CSVインポートデータ）
model ManagerMonthlySales {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  month        String // YYYY-MM 形式
  salesAmount  Int // 売上金額（円）
  insuredCount Int // 被保険者数
  isLocked     Boolean  @default(false) // ロック済み（確定後は変更不可）
  importedBy   String? // インポートした管理者ID
  importedAt   DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([userId, month])
  @@index([userId])
  @@index([month])
  @@map("manager_monthly_sales")
}

// MGR半期査定結果
model ManagerAssessment {
  id                  String                  @id @default(cuid())
  userId              String
  user                User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  periodYear          Int // 年（2025等）
  periodHalf          Int // 1（上期: 1-6月）or 2（下期: 7-12月）
  totalSales          Int // 期間売上合計（円）
  totalInsuredCount   Int // 期間被保険者数合計
  previousRangeId     String? // 前期レンジID
  previousRange       ManagerRange?           @relation("PreviousRange", fields: [previousRangeId], references: [id], onDelete: SetNull)
  newRangeId          String? // 新レンジID（査定後）
  newRange            ManagerRange?           @relation("NewRange", fields: [newRangeId], references: [id], onDelete: SetNull)
  isExempt            Boolean                 @default(false) // 査定免除中（昇格後4ヶ月以内）
  isDemotionCandidate Boolean                 @default(false) // 降格候補（120万円未満）
  status              ManagerAssessmentStatus @default(PENDING)
  confirmedBy         String? // 確定した管理者ID
  confirmedAt         DateTime? // 確定日時
  notes               String?                 @db.Text // メモ
  createdAt           DateTime                @default(now())
  updatedAt           DateTime                @updatedAt

  @@unique([userId, periodYear, periodHalf])
  @@index([userId])
  @@index([periodYear, periodHalf])
  @@index([status])
  @@index([isDemotionCandidate])
  @@map("manager_assessments")
}
