{
  "buildCommand": "prisma generate && npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["hnd1"],
  "env": {
    "PRISMA_GENERATE_DATAPROXY": "false"
  },
  "crons": [
    {
      "path": "/api/cron/update-delinquent-status",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/resume-suspended-users",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/generate-monthly-events",
      "schedule": "0 0 * * 1"
    }
  ]
}

